<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#40cccccc"
    android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBarBrightness"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:max="200"
                    android:progress="100"
                    android:rotation="270"
                    android:thumb="@drawable/brightness_drawable_thumb" />

                <TextView
                    android:id="@+id/txtValue1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:elevation="1dp"
                    android:gravity="right"
                    android:text="0" />

                <TextView
                    android:id="@+id/txtBrightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBarBrightness"
                    android:layout_centerHorizontal="true"
                    android:text="Brightness" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBarContrast"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:max="200"
                    android:progress="100"
                    android:rotation="270"
                    android:thumb="@drawable/contrast_drawable_thumb"
                    android:value="100"
                    android:valueFrom="0"
                    android:valueTo="200" />

                <TextView
                    android:id="@+id/txtContrast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBarContrast"
                    android:layout_centerHorizontal="true"
                    android:text="Contrast" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBarSaturation"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:max="200"
                    android:progress="100"
                    android:rotation="270"
                    android:thumb="@drawable/saturation_drawable_thumb"
                    android:value="100"
                    android:valueFrom="0"
                    android:valueTo="200" />

                <TextView
                    android:id="@+id/txtSaturation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBarSaturation"
                    android:layout_centerHorizontal="true"
                    android:text="Saturation" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBarSharpness"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:max="200"
                    android:progress="100"
                    android:rotation="270"
                    android:thumb="@drawable/sharpness"
                     />

                <TextView
                    android:id="@+id/txtSharpness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBarSharpness"
                    android:layout_centerHorizontal="true"
                    android:text="Sharpness" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBarHighlights"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:max="200"
                    android:progress="100"
                    android:rotation="270"
                    android:thumb="@drawable/highlights_drawable_thumb"
                     />

                <TextView
                    android:id="@+id/txtHighlights"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBarHighlights"
                    android:layout_centerHorizontal="true"
                    android:text="Highlights" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBarShadows"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:max="200"
                    android:progress="100"
                    android:rotation="270"
                    android:thumb="@drawable/shadows_drawable_thumb" />

                <TextView
                    android:id="@+id/txtShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBarShadows"
                    android:layout_centerHorizontal="true"
                    android:text="Shadows" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBarHue"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:max="200"
                    android:progress="100"
                    android:rotation="270"
                    android:thumb="@drawable/hue_drawable_thumb" />

                <TextView
                    android:id="@+id/txtHue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBarHue"
                    android:layout_centerHorizontal="true"
                    android:text="Hue" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekBarBWFilter"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="50dp"
                    android:max="200"
                    android:progress="100"
                    android:rotation="270"
                    android:thumb="@drawable/bw_filter_drawable_thumb" />

                <TextView
                    android:id="@+id/txtBWFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/seekBarBWFilter"
                    android:layout_centerHorizontal="true"
                    android:text="BW Filter" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>